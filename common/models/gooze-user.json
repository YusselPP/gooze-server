{
  "name": "GoozeUser",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "validateUpsert": true,
      "required": true
    },
    "SoftDelete" : true
  },
  "properties": {
    "username": {
      "type": "string",
      "required": true
    },
    "registerCode": {
      "type": "string"
    },
    "invitedBy": {
      "type": "string"
    },
    "birthday": {
      "type": "date"
    },
    "gender": {
      "type": "string",
      "default": null
    },
    "searchForGender": {
      "type": "array",
      "default": []
    },
    "weight": {
      "type": "number"
    },
    "height": {
      "type": "number"
    },
    "languages": {
      "type": [
        "string"
      ]
    },
    "interestedIn": {
      "type": [
        "string"
      ]
    },
    "profilePic": {
      "type": {
        "container": "string",
        "url": "string",
        "name": "string",
        "blocked": "boolean"
      }
    },
    "searchPic": {
      "type": {
        "container": "string",
        "url": "string",
        "name": "string",
        "blocked": "boolean"
      }
    },
    "photos": {
      "type": "array"
    },
    "origin": {
      "type": "string"
    },
    "phrase": {
      "type": "string"
    },
    "mode": {
      "type": "string",
      "required": true,
      "default": "client"
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "available"
    },
    "loggedIn": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "currentLocation": {
      "type": "GeoPoint"
    },
    "dateLocation": {
      "type": "GeoPoint"
    },
    "activeUntil": {
      "type": "date"
    },
    "facebookId": {
      "type": "string"
    }
  },
  "validations": [],
  "scope": {
    "include": [ "comments", "payment"]
  },
  "relations": {
    "accessTokens": {
      "type": "hasMany",
      "model": "GoozeAccessToken",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    },
    "sentRequests": {
      "type": "hasMany",
      "model": "DateRequest",
      "foreignKey": "senderId"
    },
    "receivedRequests": {
      "type": "hasMany",
      "model": "DateRequest",
      "foreignKey": "recipientId"
    },
    "roles": {
      "type": "hasMany",
      "model": "Role",
      "foreignKey": "principalId",
      "through": "RoleMapping"
    },
    "comments": {
      "type": "embedsMany",
      "model": "UserComments",
      "scope": {
        "include": "comment"
      }
    },
    "payment": {
      "type": "hasOne",
      "model": "Payment",
      "foreignKey": "userId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "accessType": "READ",
      "property": "count"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "accessType": "EXECUTE",
      "property": "facebookLogin"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "accessType": "EXECUTE",
      "property": "findByLocation"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "accessType": "EXECUTE",
      "property": "publicProfile"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "accessType": "EXECUTE",
      "property": "sendLocationUpdate"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "accessType": "EXECUTE",
      "property": "addRate"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "accessType": "EXECUTE",
      "property": "unreadMessagesCount"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "accessType": "EXECUTE",
      "property": "sendEmail"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "accessType": "EXECUTE",
      "property": "__count__comments"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "accessType": "EXECUTE",
      "property": "__get__comments"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "accessType": "EXECUTE",
      "property": "__create__comments"
    }
  ],
  "scopes": {
    "chatUser": {
      "fields": [
        "id",
        "username",
        "email",
        "searchPic",
        "profilePic",
        "imagesRating",
        "complianceRating",
        "dateQualityRating",
        "dateRating",
        "goozeRating"
      ]
    }
  },
  "methods": {}
}
