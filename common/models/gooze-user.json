{
  "name": "GoozeUser",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "validateUpsert": true,
      "required": true
    },
    "SoftDelete" : true
  },
  "properties": {
    "username": {
      "type": "string",
      "required": true
    },
    "registerCode": {
      "type": "string"
    },
    "invitedBy": {
      "type": "string"
    },
    "birthday": {
      "type": "date"
    },
    "gender": {
      "type": "string",
      "default": null
    },
    "weight": {
      "type": "number"
    },
    "height": {
      "type": "number"
    },
    "languages": {
      "type": [
        "string"
      ]
    },
    "interestedIn": {
      "type": [
        "string"
      ]
    },
    "profilePic": {
      "type": {
        "container": "string",
        "url": "string",
        "name": "string",
        "blocked": "boolean"
      }
    },
    "searchPic": {
      "type": {
        "container": "string",
        "url": "string",
        "name": "string",
        "blocked": "boolean"
      }
    },
    "photos": {
      "type": "array"
    },
    "origin": {
      "type": "string"
    },
    "phrase": {
      "type": "string"
    },
    "mode": {
      "type": "string",
      "required": true,
      "default": "client"
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "unavailable"
    },
    "loggedIn": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "currentLocation": {
      "type": "GeoPoint"
    },
    "dateLocation": {
      "type": "GeoPoint"
    },
    "activeUntil": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "accessTokens": {
      "type": "hasMany",
      "model": "GoozeAccessToken",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    },
    "sentRequests": {
      "type": "hasMany",
      "model": "DateRequest",
      "foreignKey": "senderId"
    },
    "receivedRequests": {
      "type": "hasMany",
      "model": "DateRequest",
      "foreignKey": "recipientId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "accessType": "READ",
      "property": "count"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "accessType": "EXECUTE",
      "property": "findByLocation"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "accessType": "EXECUTE",
      "property": "publicProfile"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "accessType": "EXECUTE",
      "property": "sendLocationUpdate"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "accessType": "EXECUTE",
      "property": "addRate"
    }
  ],
  "scopes": {
    "chatUser": {
      "fields": [
        "id",
        "username",
        "email",
        "searchPic",
        "profilePic",
        "imagesRating",
        "complianceRating",
        "dateQualityRating",
        "dateRating",
        "goozeRating"
      ]
    }
  },
  "methods": {}
}
