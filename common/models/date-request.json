{
  "name": "DateRequest",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "validateUpsert": true,
      "required": true
    },
    "SoftDelete" : true
  },
  "properties": {
    "status": {
      "type": "string",
      "required": true,
      "default": "sent"
    },
    "amount": {
      "type": "number"
    },
    "location": {
      "type": "GeoPoint"
    },
    "senderClosed": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "recipientClosed": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "senderArriving": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "recipientArriving": {
      "type": "boolean",
      "required": true,
      "default": false
    }
  },
  "scope": {
    "include": [
      {
        "relation": "sender",
        "scope": {
          "fields": [
            "id",
            "username",
            "email",
            "searchPic",
            "profilePic",
            "imagesRating",
            "complianceRating",
            "dateQualityRating",
            "dateRating",
            "goozeRating"
          ]
        }
      },
      {
        "relation": "recipient",
        "scope": {
          "fields": [
            "id",
            "username",
            "email",
            "searchPic",
            "profilePic",
            "imagesRating",
            "complianceRating",
            "dateQualityRating",
            "dateRating",
            "goozeRating"
          ]
        }
      },
      {
        "relation": "chat",
        "scope": {
          "include": {
            "relation": "messages",
            "scope": {
              "order": "createdAt DESC",
              "limit": 1
            }
          }
        }
      },
      {
        "relation": "date"
      }
    ]
  },
  "relations": {
    "sender": {
      "type": "belongsTo",
      "model": "GoozeUser",
      "foreignKey": "senderId",
      "options": {
        "scope": {
          "fields": [
            "id",
            "username",
            "email",
            "searchPic",
            "profilePic",
            "imagesRating",
            "complianceRating",
            "dateQualityRating",
            "dateRating",
            "goozeRating"
          ]
        }
      }
    },
    "recipient": {
      "type": "belongsTo",
      "model": "GoozeUser",
      "foreignKey": "recipientId",
      "options": {
        "scope": {
          "fields": [
            "id",
            "username",
            "email",
            "searchPic",
            "profilePic",
            "imagesRating",
            "complianceRating",
            "dateQualityRating",
            "dateRating",
            "goozeRating"
          ]
        }
      }
    },
    "chat": {
      "type": "belongsTo",
      "model": "Chat",
      "foreignKey": "chatId"
    },
    "date": {
      "type": "belongsTo",
      "model": "GZEDate",
      "foreignKey": "dateId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "find"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "accessType": "EXECUTE",
      "property": "startDate"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "accessType": "EXECUTE",
      "property": "endDate"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "accessType": "EXECUTE",
      "property": "cancelDate"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "accessType": "EXECUTE",
      "property": "closeChat"
    },
    {
      "principalType": "ROLE",
      "principalId": "requestOwners",
      "permission": "ALLOW",
      "accessType": "WRITE",
      "property": "patchAttributes"
    }
  ],
  "methods": {}
}
