{
  "name": "ChatMessage",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "validateUpsert": true,
      "required": true
    },
    "SoftDelete" : true
  },
  "properties": {
    "text": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "string",
      "required": true,
      "default": "user"
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "sent"
    }
  },
  "scope": {
    "include": [
      {
        "relation": "sender",
        "scope": {
          "fields": [
            "id",
            "username",
            "email",
            "searchPic",
            "imagesRating",
            "complianceRating",
            "dateQualityRating",
            "dateRating",
            "goozeRating"
          ]
        }
      },
      {
        "relation": "recipient",
        "scope": {
          "fields": [
            "id",
            "username",
            "email",
            "searchPic",
            "imagesRating",
            "complianceRating",
            "dateQualityRating",
            "dateRating",
            "goozeRating"
          ]
        }
      }
    ]
  },
  "relations": {
    "sender": {
      "type": "belongsTo",
      "model": "GoozeUser",
      "foreignKey": "senderId",
      "options": {
        "scope": {
          "fields": [
            "id",
            "username",
            "email",
            "searchPic",
            "imagesRating",
            "complianceRating",
            "dateQualityRating",
            "dateRating",
            "goozeRating"
          ]
        }
      }
    },
    "recipient": {
      "type": "belongsTo",
      "model": "GoozeUser",
      "foreignKey": "recipientId",
      "options": {
        "scope": {
          "fields": [
            "id",
            "username",
            "email",
            "searchPic",
            "imagesRating",
            "complianceRating",
            "dateQualityRating",
            "dateRating",
            "goozeRating"
          ]
        }
      }
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "find"
    }
  ],
  "methods": {}
}
