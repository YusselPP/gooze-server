{
  "name": "Chat",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "validateUpsert": true,
      "required": true
    },
    "SoftDelete" : true
  },
  "properties": {
    "status": {
      "type": "string",
      "required": true,
      "default": "active"
    }
  },
  "relations": {
    "dateRequest": {
      "type": "belongsTo",
      "model": "DateRequest",
      "foreignKey": "dateRequestId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "find"
    }
  ],
  "methods": {}
}
